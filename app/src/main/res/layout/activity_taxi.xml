<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_inicio"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_conductor"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="34dp"
            android:text="@string/titulo_login"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/lcuenta"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/bar_layout"
            android:layout_marginTop="10dp"
            android:background="@color/plomo2"
            android:orientation="horizontal" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:hint="@string/correo_cliente"
            android:cursorVisible="true"
            android:textColor="@color/gradient_start_color"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/colorPrimary"
            android:textColorHighlight="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/gradient_start_color"
            app:met_singleLineEllipsis="true"

            />
        <TextView
            android:id="@+id/b_1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/gradient_start_color"
            android:text="@string/btn_continuar_login"
            android:textStyle="bold"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text=""
            android:hint="@string/contrasena"
            android:cursorVisible="true"
            android:textColor="@color/gradient_start_color"
            android:textSize="15dp"
            android:shadowColor="@color/colorPrimary"
            android:textColorHighlight="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/gradient_start_color"
            app:met_singleLineEllipsis="true"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:buttonTint="@color/gradient_end_color"
            android:textColor="@color/colonegro"
            android:text="@string/check"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/txt_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/contra_olvidada"
            android:textColor="@color/gradient_end_color"
            android:visibility="gone"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btniniciar"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@color/gradient_start_color"
            android:text="@string/btn_iniciar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>


